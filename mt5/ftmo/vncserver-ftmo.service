[Unit]
Description=TigerVNC Server for FTMO (display :1)

[Service]
Type=simple
Environment=HOME=/home/tradebot
ExecStartPre=/bin/sh -c 'rm -f /tmp/.X1-lock /tmp/.X11-unix/X1 2>/dev/null || true'
ExecStart=/usr/bin/Xvnc :1 -auth /home/tradebot/.Xauthority -desktop ftmo:1 -pn -rfbauth /home/tradebot/.config/tigervnc/passwd -rfbport 5901
ExecStop=/bin/sh -c 'kill $MAINPID'
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
